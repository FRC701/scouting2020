<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/BackGroundGreen"
>


    <TextView
        android:id="@+id/textView6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="match predictions"
        android:textSize="40dp"
        android:textAlignment="center"
        android:textColor="@color/Goldish" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView11"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="red"
                android:textSize="40dp"
                android:textColor="@color/Red"
                android:textAlignment="center"/>

            <EditText
                android:id="@+id/red1_Et"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName"
                android:text="Red 1"
                android:textSize="40dp"
                android:textColor="@color/White" />

            <EditText
                android:id="@+id/red2_Et"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName"
                android:text="Red 2"
                android:textSize="40dp"
                android:textColor="@color/White" />

            <EditText
                android:id="@+id/red3_Et"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName"
                android:text="Red 3"
                android:textSize="40dp"
                android:textColor="@color/White" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView12"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="blue"
                android:textSize="40dp"
                android:textColor="@color/Blue"
                android:textAlignment="center"/>

            <EditText
                android:id="@+id/blue1_Et"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="40dp"
                android:ems="10"
                android:inputType="textPersonName"
                android:text="Blue 1"
                android:textColor="@color/White" />

            <EditText
                android:id="@+id/blue2_Et"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName"
                android:text="Blue 2"
                android:textSize="40dp"
                android:textColor="@color/White" />

            <EditText
                android:id="@+id/blue3_Et"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName"
                android:text="Blue 3"
                android:textSize="40dp"
                android:textColor="@color/White" />
        </LinearLayout>
    </LinearLayout>
    <TextView
        android:id="@+id/winner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Winner: "
        android:textSize="40dp"
        android:textAlignment="center"
        android:textColor="@color/Yellow"/>
    <TextView
        android:id="@+id/winnerans"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=" "
        android:textSize="40dp"
        android:textAlignment="center"
        android:textColor="@color/Yellow"/>

</LinearLayout>