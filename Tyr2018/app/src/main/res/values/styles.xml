<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="TyrTheme" parent="AppTheme">
        <item name="android:colorBackground">@color/background_material_lighter</item>
        <item name="colorPrimaryDark">@android:color/black</item>
    </style>

    <style name="TyrTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="TyrTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
